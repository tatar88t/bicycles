include ../../../common/markup/utilites

mixin comparison-product-item(cpriimg, cprialt, cpricategory, cpriproduct, cpriprice, cprioldprice)
    .comparison-product-item
        a(href="#").comparison-product-item-img
            img(src="images/" + cpriimg, alt = cprialt)
        .comparison-product__capture
            .comparison-product__capture-descr
                .category=cpricategory
                a(href="#")
                    h4.title=cpriproduct
                .price-block
                    .price=cpriprice
                    .old-price=cprioldprice
                button.btn.btn-xs.btn-basket в корзину
            .comparison-product-remove-block
                button.comparison-remove-btn(type="button")
                    +svg-icon("trash")


mixin comparison-property-item(cpiname, cpivalue1, cpivalue2, cpivalue3, cpivalue4, cpivalue5, cpivalue6)
