        .compare-property-title
            span=cpiname
        ul.compare-property-values
            li.compare-property-value=cpivalue1
            li.compare-property-value=cpivalue2
            li.compare-property-value=cpivalue3
            li.compare-property-value=cpivalue4
            li.compare-property-value=cpivalue5
            li.compare-property-value=cpivalue6
